{
  "name": "11ty-base",
  "version": "1.0.0",
  "description": "Opiniated starter template for 11ty",
  "scripts": {
    "serve:tailwind": "npx tailwindcss -i src/assets/css/base.css -c tailwind.config.js -o src/assets/css/style.css --watch",
    "serve:11ty": "eleventy --serve --quiet",
    "build:tailwind": "npx tailwindcss -i src/assets/css/base.css -c tailwind.config.js -o src/assets/css/style.min.css --minify",
    "build:11ty": "eleventy",
    "delete:unused-css": "rm dist/assets/css/style.css",
    "serve": "NODE_ENV=development run-p serve:*",
    "build": "NODE_ENV=production run-s build:* delete:unused-css"
  },
  "keywords": [
    "Justin Ahinon"
  ],
  "author": "",
  "license": "IGPL-3.0",
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.0.15"
  }
}
