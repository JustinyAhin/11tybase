{
  "name": "11ty-base",
  "version": "1.0.0",
  "description": "Opiniated starter template for 11ty",
  "scripts": {
    "build:tailwind": "NODE_ENV=production postcss src/assets/css/base.css -o src/assets/css/style.min.css",
    "serve:tailwind": "postcss src/assets/css/base.css -o src/assets/css/style.css --watch",
    "build:11ty": "eleventy",
    "serve:11ty": "eleventy --serve --quiet",
    "delete:css": "rm dist/assets/css/style.css",
    "serve": "NODE_ENV=development run-p serve:*",
    "build": "NODE_ENV=production run-s build:*"
  },
  "keywords": [
    "Justin Ahinon"
  ],
  "author": "",
  "license": "IGPL-3.0",
  "devDependencies": {
    "@11ty/eleventy": "^1.0.0",
    "autoprefixer": "^10.4.2",
    "cssnano": "^5.0.17",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.6",
    "postcss-cli": "^9.1.0",
    "tailwindcss": "^3.0.15"
  }
}
